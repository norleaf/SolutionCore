<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Solution Core</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
    <body>
        <nav class="navbar navbar-left" style="position:fixed; background-color:#f8f8f8; height:100%;">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">SolutionCore</a>
                </div>
                <div class="navbar-default" id="myNavbar">
                    <ul class="nav navbar-left" style="min-width:200px;">
                        <li class="active">@Html.ActionLink("Home", "Index", "Home")</li>
                        <li class="dropdown">
                            <a class="dropdown"  href="/Companies/CompView">
                                Firma Data
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="#">Page 1-1</a></li>
                                <li><a href="#">Page 1-2</a></li>
                                <li><a href="#">Page 1-3</a></li>
                            </ul>
                        </li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        <li>@Html.ActionLink("TEST", "Index", "Home")</li>
                        <li>@Html.ActionLink("TEST", "Companies", "Companies")</li>
                        <li>@Html.ActionLink("TEST", "About", "Home")</li>
                        <li>@Html.ActionLink("TEST", "Contact", "Home")</li>
                    </ul>
            </div>
        </nav>
    
        <div class="col-md-12 navbar container-fluid" style="margin-left: 202px; position:fixed; background-color:#f8f8f8;">
            Test
        </div>
        <div class="container body-content" style="padding-top:50px;">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
</html>
